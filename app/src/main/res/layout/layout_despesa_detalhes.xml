
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtdescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_gravity="center_vertical"
            android:hint="Descrição despesa"/>

    </android.support.design.widget.TextInputLayout>



    <TextView
        android:text="Categoria Despesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_gravity="center_vertical"/>

    <Spinner
        android:id="@+id/spnCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtVencimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:focusable="false"
        android:inputType="none"
        android:hint="Data de Vencimento"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edtValorParcela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:inputType="numberDecimal"
        android:layout_gravity="center_vertical"
        android:hint="Valor Despesa R$"/>

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDespesaAlterar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alterar"/>

        <Button
            android:id="@+id/btnDespesaPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pagar"/>

        <Button
            android:id="@+id/btnDespesaExcluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Excluir"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDetalhePago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lançamento Pago"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/colorRed"
        android:visibility="invisible"
        />


</LinearLayout>
